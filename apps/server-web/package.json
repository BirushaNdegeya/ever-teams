{
  "name": "@ever-teams/server-web",
	"version": "0.1.0",
	"license": "UNLICENSED",
	"author": {
		"name": "Ever Co. LTD",
		"email": "ever@ever.co",
		"url": "https://ever.co"
	},
	"private": true,
  "description": "My application description",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:prod": "nextron build --config electron-builder.prod.yml",
    "build:mac": "nextron build --mac --x64",
    "build:mac:universal": "nextron build --mac --universal",
    "build:win": "nextron build --win --ia32",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps",
    "build:v1": "yarn next build renderer"
  },
  "dependencies": {
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.2",
    "@types/react": "18.0.21",
    "autoprefixer": "^10.4.12",
    "electron": "28.1.0",
		"electron-builder": "^24.6.4",
    "next": "^14.2.3",
    "nextron": "^8.15.0",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.4"
  },
  "prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always",
		"trailingComma": "none",
		"quoteProps": "as-needed",
		"overrides": [
			{
				"files": "*.scss",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			},
			{
				"files": "*.yml",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"engines": {
		"node": ">=16.0.0",
		"yarn": ">=1.13.0"
	}
}
